<h1>Login</h1>
<%= form_tag author_sessions_path, method: :post do %>
  <div>
    <p>
      <%= label_tag :email %>
      <%= text_field_tag :email %>
    </p>

    <p>
      <%= label_tag :password %>
      <%= password_field_tag :password %>
    </p>
    <br />
    <div class="actions">
      <%= submit_tag "Login" %>
    </div>
  </div>
<% end %>

<%= link_to 'Back', articles_path %>
