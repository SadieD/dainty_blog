<p id="notice"><%= notice %></p>

<h1>Authors</h1>

<table>
  <thead>
    <tr>
      <th>Username</th>
      <th> &nbsp;&nbsp;Email</th>

    </tr>
  </thead>

  <tbody>
    <% @authors.each do |author| %>
      <tr>
        <td style="padding: 5px;"><%= author.username %></td>
        <td style="padding: 5px;"><%= author.email %></td>
        <% if author.id == current_user.id %>
          <td style="padding: 5px;"><%= link_to 'Edit', edit_author_path(author) %></td>
          <td style="padding: 5px;"><%= link_to 'Destroy', author, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        <% end %>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Author', new_author_path %>
